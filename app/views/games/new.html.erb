<h1 class="text-center">Welcome to the Longest Word Game</h1>

<h2 class="text-center">Letters:</h2>

<div class="text-center">
  <% @letters.each do |letter| %>
  <h2 class="letters"><%= letter %></h2>
  <% end %>
</div>

<div id="form">
  <form action="/score" method="post" class="form-group text-center">
    <label>What is the longest word you can find?</label><br>
    <input type="text" name="word" placeholder="Type word here">
    <input type="submit" value="Go">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
  </form>
</div>
